<% provide(:title, @user.first_name) %>

<div class="hi-user-header">
  <h1>
    Hi, <%= @user.first_name %>!
  </h1>
</div>


<div class="col-md-8">
  <% if @user.lists.any? %>
    <div class="list-group">
      <h4>Your learnlists <%#= @user.lists.count -%></h4>
      <%= render @user.lists %>
    </div>

  <% end %>

  <%=render 'shared/list_add' %>


</div>

<div class="all-items container-fluid">
  <%=render partial: 'items/item', locals:{items: @items} %>
</div>
