
<!-- Checks for errors -->
<% if @user.errors.any? %>
  <div id="error-explanation">
    <div class="alert alert-danger">
      <!-- Counts up all errors with count function
      pluralize makes sure that the word error is plural when it
      needs to be-->
      The form contains <%= pluralize(@user.errors.count, "error")%>
    </div>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li>
          <%= message %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>
